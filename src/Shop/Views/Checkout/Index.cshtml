
@{
    ViewData["Title"] = "Index";
    ViewData["ac"] = "Index";
}
@using Shop.Handlers.Interfaces
@model ItemViewModel
@inject IItemHandler<ItemModel> items
<form method="post">
    <div asp-validation-summary="All" class="text-danger bg-light"></div>
    <div>
        <div class="card-deck input-group-text">
            <label class="float-left">Product Name:</label>
            <div class="col-md float-left">
                <input type="text" class="w-100" asp-for="Name" autocomplete="off" id="suggst" />
                <div id="suggesstion"></div>
            </div>

            <label class="float-left">Product Quantity:</label>
            <div class="col-md float-left">
                <input type="text" class="w-100" asp-for="Quantity" autocomplete="off" />
            </div>
            <button class="float-right">Add</button>
        </div>
    </div>
</form>

<div>
    <div class="card" style="margin-top: 10px">
        <div class="card card-deck">
            <div class="card card-columns ">Name</div>
            <div class="card card-columns">Brand</div>
            <div class="card card-columns">Price Per Unit</div>
            <div class="card card-columns">Quantity</div>
            <div class="card card-columns">Total</div>
            <div class="card card-columns">Modify</div>
        </div>
    </div>
    <div class="card" style="margin-top: 10px" id="Container">
        <div>
            @for (var i = 1; i < items.List.Count; i++)
            {
                <div class="card card-deck">
                    <div class="card card-columns">@items.List[i].Name</div>
                    <div class="card card-columns">@items.List[i].Brand</div>
                    <div class="card card-columns">@items.List[i].Price</div>
                    <div class="card card-columns">@items.List[i].Quantity</div>
                    <div class="card card-columns">@items.List[i].TotalPrice</div>
                    <div class="card card-columns d-inline-block"><a class="btn btn-link p-2 align-content-between" asp-action="update" asp-route-Name="@items.List[i].Name">edit</a><a class="btn btn-link p-2 align-content-between" asp-action="Delete" asp-route-id="@items.List[i].Id">delete</a></div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    var c = document.getElementById("suggst");

    c.addEventListener("keyup", call);
    c.addEventListener("paste", call);

</script>

@section footer
{
    <form method="post" asp-action="Payment">
        @for (var i = 1; i < items.List.Count; i++)
        {
            <input type="hidden" value="@items.List[i].Id" name="id" formmethod="post"/>
            <input type="hidden" value="@items.List[i].Name" name="name" formmethod="post"/>
            <input type="hidden" value="@items.List[i].Brand" name="brand" formmethod="post"/>
            <input type="hidden" value="@items.List[i].Price" name="price" formmethod="post"/>
            <input type="hidden" value="@items.List[i].Quantity" name="Quantity" formmethod="post"/>
            <input type="hidden" value="@items.List[i].TotalPrice" name="totalPrice" formmethod="post"/>
        }
        <div class="card-footer bg-dark">
            <div style="margin-left: calc(100% - 150px)">
                <button class="btn-primary btn btn-success">Payment Now</button>
            </div>
        </div>
    </form>
}
